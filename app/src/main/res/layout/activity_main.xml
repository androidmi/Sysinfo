<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/info" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/number"
        android:inputType="phone"
        android:hint="请输入手机号" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/body" android:hint="输入内容" android:layout_width="match_parent"
        android:text="这是一条测试短信"
        android:minLines="3"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/send" android:text="发送" android:layout_width="wrap_content"
        android:maxLines="3"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/sendList"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

</LinearLayout>
